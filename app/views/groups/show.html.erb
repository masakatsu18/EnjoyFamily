<h2>Group Detail</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>メンバー</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @group.name %></td>
            <td><%= @group.introduction %></td>
            <td>
              <% @group.customers.each do |member| %>
                <%= member.full_name %><br>
              <% end %>
            </td>
            <td>
              <% if @group.owner_id == current_customer.id %>
                <%= link_to 'Edit', edit_group_path(@group), class: "btn btn-sm btn-success" %>
              <% elsif @group.customers.include?(current_customer) %>
                <%= link_to 'Leave this group', group_disjoin_path(@group), method: :delete, class: "btn btn-sm btn-danger" %>
                  <%= render partial: 'public/events/form', locals: { event: @event, group: @group} %>
                  <%= render template:"public/events/index" %>
                 <% else %>
                <%= link_to 'Join this group', group_join_path(@group), class: "btn btn-sm btn-success" %>
              <% end %>
            </td>
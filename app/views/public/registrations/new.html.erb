

        <p class="text-center font">sign up</p>
       　 <div class="d-flex justify-content-center">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= render "public/shared/error_messages", resource: resource %>

                  <div class = "mt-5 font-3">
                    <tr>
                      <td>名前</td>
                      <span class="badge badge-info rounded-0">必須</span>
                      <td><%= f.label :first_name, "(姓)", class: "customer_name" %> <%= f.text_field :first_name, autofocus: true, :placeholder =>"山田", :size => "30*30" %></td>
                      <td><%= f.label :last_name, "(名)", class: "customer_name" %> <%= f.text_field :last_name, :placeholder =>"太郎", :size => "30*30" %></td>
                    </tr>
                  </div>

                 <div class = "mt-5 font-3">
                    <tr>
                      <td>フリガナ</td>
                      <span class="badge badge-info rounded-0">必須</span>
                      <td><%= f.label :last_name_kana, "(セイ)" %> <%= f.text_field :last_name_kana, :placeholder =>"ヤマダ", :size => "26*30" %></td>
                      <td><%= f.label :first_name_kana, "(メイ)" %> <%= f.text_field :first_name_kana, :placeholder =>"タロウ", :size => "26*30" %></td>
                    </tr>
                </div>
                 <div class = "mt-5 font-3">
                     <tr>
                    　<span class="badge badge-info rounded-0">必須</span>
                      <td><%= f.label :email, class: "customer_name" %> <%= f.text_field :email, autofocus: true, :placeholder =>"example@.com" %></td>
                     </tr>

                    <div class="field mt-5 ">
                      <%= f.label :password %>
                      <span class="badge badge-info rounded-0">必須</span>
                      <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %><br />
                      <%= f.password_field :password, autocomplete: "new-password" %>
                    </div>

                    <div class="field mt-5">
                        <span class="badge badge-info rounded-0">必須</span>
                      <%= f.label :password_confirmation %><br />
                      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                    </div>

                    <div class="actions mt-2">
                      <%= f.submit "Sign up",class:'btn btn-primary' %>
                    </div>
                　</div>
                    会員登録がお済みの方は<%= link_to "こちら",new_customer_session_path %></div>

                  <% end %>


     </div>
<%= link_to 'event addition', new_event_path %>

    <%= month_calendar events: @events do |date, events| %>
      <%= date.day %>

        <% events.each do |event| %>
            <div>
              <%= event.title %>
              <%= event.start_time.strftime( "%H:%M" ) %>ã€œ<%= event.finish_time.strftime( "%H:%M" ) %>
              <%= event.content %>
              <%= link_to"edit", edit_event_path(event), class: "btn btn-success" %>
              <%= link_to"delete", event_path(event), method: :delete, class: "btn btn-danger" %>
            </div>
        <% end %>
    <% end %>
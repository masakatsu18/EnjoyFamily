      <section class="inner">
     	<h2 class="section-ttl"><%= @customer %>さんのページ</h2>
     	<table class="customer_info">
     		<thead>
     			<th></th>
     			<th></th>
     			<th></th>
     		</thead>
     		<tbody>
     			<tr>
     				<td>名前</td>
     				<td>(姓) <%= @customer.first_name %></td>
     				<td>(名) <%= @customer.last_name %></td>
     			</tr>
     			<tr>
     				<td>フリガナ</td>
     				<td> <%= @customer.name_kana %></td>
     			</tr>
     			<tr>
     				<td>メールアドレス</td>
     				<td colspan="2"><%= @customer.email %></td>
     			</tr>
        <tr>
     				<td>家族構成</td>
     				<td colspan="2"><%= @customer.family_structure %></td>
     			</tr>
     				<td>会員ステータス</td>
     				<td colspan="2">
     					<% if @customer.is_deleted? %>
     						<span class="text-active">有効	</span>					
     					<% else %>
     						<span class="text-invalid">退会済み</span>
     					<% end %>
     				</td>
     			</tr>
     			<tr>
     				<td><%= link_to "編集", edit_customer_path(@customer), class: "btn btn-success" %></td>
     			</tr>
     		</tbody>
     	</table>
     	
     </section>
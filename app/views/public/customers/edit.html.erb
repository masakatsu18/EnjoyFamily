<p class ="text-center font-2"><%= @customer.full_name %>さんの編集</p>
     <p class="text-center font">edit</p>
       　 <div class="d-flex justify-content-center">
          <%= form_with model: @customer, url:customer_path(@customer.id), method: :patch do |f| %>

            <div class = "mt-5 font-3">
                    <tr>
                      <td>名前</td>
                      <td><%= f.label :last_name, "(姓)", class: "customer_name" %> <%= f.text_field :last_name, autofocus: true, :placeholder =>"山田", :size => "30*30" %></td>
                      <td><%= f.label :first_name, "(名)", class: "customer_name" %> <%= f.text_field :first_name, :placeholder =>"太郎", :size => "30*30" %></td>
                    </tr>
                  </div>

                 <div class = "mt-5 font-3">
                    <tr>
                      <td>フリガナ</td>
                      <td><%= f.label :last_name_kana, "(セイ)" %> <%= f.text_field :last_name_kana, :placeholder =>"ヤマダ", :size => "26*30" %></td>
                      <td><%= f.label :first_name_kana, "(メイ)" %> <%= f.text_field :first_name_kana, :placeholder =>"タロウ", :size => "26*30" %></td>
                    </tr>
                </div>
                 <div class = "mt-5 font-3">
                     <tr>
                      <td><%= f.label :email, class: "customer_name" %> <%= f.text_field :email, autofocus: true, :placeholder =>"example@.com" %></td>
                     </tr>
               <div class = "mt-5">
                <%= f.submit "更新", class: "btn btn-success" %>
             		</div>
      <% end %>
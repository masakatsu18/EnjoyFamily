
 <p class="text-lg-center font-2"><%= @customer.full_name %>さんの編集</p>
    <div class="d-flex justify-content-center">
     <%= form_with model: @customer, url:admin_customer_path(@customer.id), method: :patch do |f| %>
       <form>
             <div class="form-group row">
              <div class="mt-5 font-2">
               <label for="inputname" class="col-sm-2 col-form-label">name</label>
               <div class="col-sm-10">
                 <%= f.text_area :full_name, size: "50" %>
               </div>
              </div>
             </div>
             
             <div class="form-group row">
              <div class="mt-5 font-2">
               <label for="inputname" class="col-sm-2 col-form-label">カナ</label>
               <div class="col-sm-10">
                 <%= f.text_area:name_kana, size: "50" %>
               </div>
             </div>
            </div>
             
             <div class="form-group row">
              <div class="mt-5 font-2">
               <label for="inputname" class="col-sm-2 col-form-label">e-mail</label>
               <div class="col-sm-10">
                 <%= f.text_area:email, size: "50" %>
               </div>
             </div>
            </div>
             
             <div class="d-flex justify-content-end">
               <td colspan="3"><%= f.submit "更新", class: "btn btn-success" %></td>
              </div>
           </form>
     <% end %>
    </div>
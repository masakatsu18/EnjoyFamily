<h2>検索結果</h2>

<table class="table table-hover table-inverse">
 
  <% if @range == "Customer" %>
    <tbody>
      <% @customers.each do |f| %>
        <tr>
          <td><%= f.first_name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <tbody>
      <% @groups.each do |f| %>
        <tr>
          <td>
            <%= link_to group_path(f.id) do %>
              <%= f.name %>
              
              aaaaa
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
 <% end %>
</table>